#include <iostream>
using namespace std;

int main() {
    int buku[2][4];
    int total[4] = {0, 0, 0, 0};

    for (int i = 0; i < 2; i++) {
        cout << "Masukkan jumlah buku untuk Ruangan " << i+1 << ":\n";
        for (int j = 0; j < 4; j++) {
            cout << "  Jenis Buku " << j+1 << ": ";
            cin >> buku[i][j];
        }
    }

    for (int j = 0; j < 4; j++) {
        for (int i = 0; i < 2; i++) {
            total[j] += buku[i][j];
        }
    }

    cout << "\nTotal buku untuk setiap jenis buku:\n";
    for (int j = 0; j < 4; j++) {
        cout << "Jenis Buku " << j+1 << ": " << total[j] << " buku\n";
    }

    return 0;
}
